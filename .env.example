# Server Configuration
NODE_ENV=development
PORT=3001

# JWT Authentication Secrets
# IMPORTANT: Generate strong, unique secrets for production
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Token Expiration Times
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Database Configuration
DATABASE_URL=postgresql://akshara_user:akshara_password@localhost:5432/akshara_db

# Optional: Separate database credentials
DB_HOST=localhost
DB_PORT=5432
DB_NAME=akshara_db
DB_USER=akshara_user
DB_PASSWORD=akshara_password

# Security Settings
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=30

# CORS Settings
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Development Only - Remove in production
DEBUG=true
VERBOSE_LOGGING=true